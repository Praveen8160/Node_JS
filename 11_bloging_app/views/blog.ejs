<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title><%= singleblog.title %></title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mb-5 ms-3">
      <h1 class=""><%= singleblog.title %></h1>
        <img src="<%= singleblog.coverImageURL %>" class="mt-3" height="40%" width="50%" alt="...">
        <div class="card-body">
          <p class="card-text mt-4"><%= singleblog.body %></p>
          <!-- <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p> -->
        </div>
        <div class="mt-5">
          <p>Posted by</p>
          <img src=<%= singleblog.createdBy.profileImage%> alt="" height="60px" weight="60px"><%= singleblog.createdBy.fullname %>
        </div>
        <div>
          <h1>Commnets(<%= All_comments.length %>)</h1>
          <% if (locals.user) { %>
            <form action="/blog/comments/<%= singleblog._id %>" method="post">
              <div class="mb-3">
                <input type="text" class="form-control" id="comment" placeholder="Enter Your Comment" name="comment" aria-describedby="emailHelp">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          <% } %>
        </div>
        <div>
          <% All_comments.forEach(comment => { %>
            <div class="mt-3">
            <h4><%= comment.createdBy.fullname %></h4>
            <p><%= comment.content %></p>
          </div>
          <% }) %>
        </div>
      </div>
    <%- include("./partials/script") %>
</body>
</html>